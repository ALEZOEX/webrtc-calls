      if (userName && roomId) {
        // –§–æ—Ä–º–∏—Ä—É–µ–º URL —Å –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏ –¥–ª—è –ø—Ä–∏–≤–∞—Ç–Ω–æ–π –∫–æ–º–Ω–∞—Ç—ã
        let url = `/room/${encodeURIComponent(roomId)}?userName=${encodeURIComponent(userName)}`;
        if (isPrivate) {
