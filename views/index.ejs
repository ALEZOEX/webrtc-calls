    });

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ —á–µ–∫–±–æ–∫—Å–∞ "–ü—Ä–∏–≤–∞—Ç–Ω–∞—è –∫–æ–º–Ω–∞—Ç–∞" –≤ —Ñ–æ—Ä–º–µ –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è
    document.getElementById('isPrivateRoomJoin').addEventListener('change', function() {
      const passwordGroup = document.getElementById('joinPasswordGroup');
      if (this.checked) {
        passwordGroup.style.display = 'block';
      } else {
        passwordGroup.style.display = 'none';
      }
    });

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ —á–µ–∫–±–æ–∫—Å–∞ "–ü—Ä–∏–≤–∞—Ç–Ω–∞—è –∫–æ–º–Ω–∞—Ç–∞" –≤ —Ñ–æ—Ä–º–µ —Å–æ–∑–¥–∞–Ω–∏—è
    document.getElementById('createPrivateRoom').addEventListener('change', function() {
      const passwordGroup = document.getElementById('createPasswordGroup');
      if (this.checked) {
