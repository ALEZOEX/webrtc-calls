    });

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Ñ–æ—Ä–º—ã –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è –∫ –∫–æ–º–Ω–∞—Ç–µ
    document.getElementById('joinForm').addEventListener('submit', function(event) {
      event.preventDefault();
      let userName = document.getElementById('joinUserName').value.trim();
      let roomId = document.getElementById('joinRoomId').value.trim();
      const isPrivate = document.getElementById('isPrivateRoomJoin').checked;
      let password = '';

      if (isPrivate) {
        password = document.getElementById('joinRoomPassword').value.trim();
        if (!password) {
          alert('–î–ª—è –ø—Ä–∏–≤–∞—Ç–Ω–æ–π –∫–æ–º–Ω–∞—Ç—ã —Ç—Ä–µ–±—É–µ—Ç—Å—è –ø–∞—Ä–æ–ª—å');
